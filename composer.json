{
    "name": "zaherg/laracasts-downloader",
    "description": "This is just a small app to download the courses from laracasts",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Zaher Ghaibeh",
            "email": "z@zah.me"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\" : "src/"
        }
    },
    "require": {
        "php": "^7.2",
        "ext-json": "^1.6",
        "ext-mbstring": "^7.2",
        "guzzlehttp/guzzle": "^6.3",
        "illuminate/support": "^5.7",
        "league/flysystem": "^1.0",
        "symfony/console": "^4.2",
        "symfony/css-selector": "^4.2",
        "symfony/dom-crawler": "^4.2",
        "symfony/dotenv": "^4.2",
        "tightenco/collect": "^5.7"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.2",
        "friendsofphp/php-cs-fixer": "^2.13",
        "roave/security-advisories": "dev-master"
    },
    "scripts": {
        "fix" : "php vendor/bin/php-cs-fixer fix --using-cache=no"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "bin": ["laracasts"]    
}
